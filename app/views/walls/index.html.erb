<div class="content margin_padding">
  <div class="pic_header margin_padding">
    <img src="/images/rtbf.png" alt="head picture"/>
  </div>
  <div class="app_clear">&nbsp;</div>
  <%= render :partial => "/layouts/header.html" %>
  <div>
    <div class="pic_header detail_content float_left  margin_padding">
      <div>
        <% form_remote_tag :url => post_message_path, :method => :post,
              :loading => "$('spinner_share').show(); $('button_share').hide()",
              :complete => "$('spinner_share').hide(); $('button_share').show()" do %>
          <div><textarea class="content_textarea" name="message"></textarea></div>
          <%= submit_tag "Share", :class => "float_right", :id => "button_share" %>
          <%= image_tag 'spinner.gif', :class => "float_right", :style => "display: none", :id => 'spinner_share' %>
        <% end %>
      </div>
      <div class="app_clear">&nbsp;</div>
      <span id="message_list">
        <% @wall_messages.each do |wm| %>
          <%= render :partial => "message_list", :locals => { :message => wm } %>
        <% end %>
      </span>
    </div>
    <div class="banner float_left  margin_padding">
    </div>
    <div class="clear"></div>
    <div class="pic_header pic_footer margin_padding">
      <img src="/images/rtbf footer.png" alt="foot picture"/>
    </div>
  </div>
</div>
